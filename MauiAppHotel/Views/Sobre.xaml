<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre o Fichário"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center">

            <Label Text="Sobre o Fichário"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#6A1B9A"
                   HorizontalOptions="Center" />

            <BoxView Color="#BA68C8"
                     HeightRequest="2"
                     WidthRequest="200"
                     HorizontalOptions="Center" />

            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#D1D9E6">

                <VerticalStackLayout Spacing="10">

                    <Label Text="Aplicativo de Hospedagem Hotel"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center" />

                    <Label Text="Ano de Desenvolvimento: 2025"
                           FontSize="16"
                           TextColor="#555555"
                           HorizontalOptions="Center" />

                    <Label Text="Desenvolvido por: Tamara Costa"
                           FontSize="16"
                           TextColor="#555555"
                           HorizontalOptions="Center" />

                    <Label Text="Este sistema foi criado para permitir ao usuário calcular diárias, escolher acomodações e visualizar informações relevantes."
                           FontSize="14"
                           TextColor="#666666"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           HorizontalTextAlignment="Center" />

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>