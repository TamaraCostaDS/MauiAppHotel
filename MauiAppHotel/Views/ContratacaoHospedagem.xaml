<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">

        <Label Text="Cálculo da Diária"
               FontFamily="Kalam"
               FontSize="50"
               TextColor="{StaticResource CorAzulEscuro}"
               HorizontalOptions="Center" />

        <Frame Padding="10" BackgroundColor="White" CornerRadius="15" HasShadow="True">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:" />

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource CorAzulMar}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" />

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource CorAzulMar}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}" />

                </Grid>

                <Label Text="Escolha sua Suíte" />

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação"
                        ItemDisplayBinding="{Binding Descricao}" />

                <Frame Padding="10"
                       Margin="10"
                       BackgroundColor="{StaticResource Gray100}"
                       CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" FontAttributes="Bold" />

                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botões de ação -->
                <VerticalStackLayout Spacing="10"
                                     Margin="0,20,0,0">

                    <Button Text="Avançar"
                            Clicked="Button_Clicked"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="12" />

                    
                    <Button Text="Sobre o Sistema"
                            BackgroundColor="#6A1B9A"
                            TextColor="White"
                            CornerRadius="12"
                            Clicked="AbrirSobre_Clicked" />

                </VerticalStackLayout>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>

