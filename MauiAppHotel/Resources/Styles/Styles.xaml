<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="CorPrincipal">#00BFA5</Color>
    <Color x:Key="CorSecundaria">#FFD54F</Color>
    <Color x:Key="CorFundo">#E0F7FA</Color>
    <Color x:Key="CorTexto">#004D40</Color>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource CorPrincipal}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource CorFundo}" />
    </Style>

    <Style TargetType="Label" x:Key="Titulo">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource CorTexto}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin" Value="10" />
    </Style>

</ResourceDictionary>

